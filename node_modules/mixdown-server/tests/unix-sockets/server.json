{
	"app": {
		"plugins" :{
			"hello": {
				"module": "/tests/plugin.js",
				"options": {}
			},
			"hello2": {
				"module": "/tests/composite.js#api2",
				"options": {}
			},
			"router": {
				"module": "/tests/router.js",
				"options": {}
			},
			"headers": {
				"module": "/tests/headers.js",
				"options": {
					"headers": { "mixdown-test": "base config" }
				}
			}
		}
	},
	"sites": [
		{
			"id": "mixdown",
			"hostmap": [
				"localhost",
				"127.0.0.1"
			],
			"plugins" :{
				"view": {
					"module": "broadway-handlebars",
					"options": {
						"optimize": false,
						"development": true
					}
				}
			}
		}
	],
	"server": {
		"listen": {
			"type": "unix",
			"path": "/tmp/mixdown.sock"
		},
	    "cluster": {
	        "on": true,
	        "workers": 2
	    }, 
	    "logger": {
	    	"defaults": {
	    		"handleExceptions": false,
		      	"json": false,
		      	"timestamp": true,
		      	"colorize": true
	    	},
	    	"transports": [{
	    		"transport": "Console",
	    		"options": {
	    			"handleExceptions": true
	    		}
			}]
	    }
	}
}